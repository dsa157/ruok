<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="com.dsa157.ruok.view.AddSchedule" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Add Schedule">
	  <content>
        <Input id="msg" placeholder="Enter Reminder Message..." />
	    <DateTimeInput id="dt" type="Time" placeholder="Enter Reminder Time ..." />
	    <HBox>
    		<CheckBox id="rptM" text="Mo" />
    		<CheckBox id="rptT" text="Tu" />
    		<CheckBox id="rptW" text="We" />
    		<CheckBox id="rptTh" text="Th" />
    		<CheckBox id="rptF" text="Fr" />
    		<CheckBox id="rptSa" text="Sa" />
    		<CheckBox id="rptSu" text="Su" />
  	    </HBox>
	    <VBox>
              <Button class="menuBtn" id="challenge" text="Challenge Type" press="onPressChallenge" icon="sap-icon://action" />
              <Button class="menuBtn" id="alarm" text="Alarm Sound" press="onPressAlarm" icon="sap-icon://action" />
	    </VBox>
	
	
		</content>
        <footer>
          <Bar>
            <contentLeft>
              <Button id="back" text="Back" press="onPressBack" icon="sap-icon://nav-back" />
            </contentLeft>
            <contentRight>
              <Button id="save" text="Save" press="onPressSave" icon="sap-icon://save" />
            </contentRight>
          </Bar>
        </footer>
	</Page>
</core:View>
